<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/challenge_img"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/step_challenge"
        android:scaleType="centerCrop"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/challenge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Running Challenge"
        style="@style/Title"
        android:paddingStart="15dp"/>
    <TextView
        android:id="@+id/challenge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance challenge"
        android:paddingStart="15dp"/>

    <ProgressBar
        android:id="@+id/completeness_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="13"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.5 / 100 km"
            android:layout_alignParentStart="true"
            style="@style/BlackText"/>
        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.5%"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Ends in 2 days"
        android:paddingEnd="15dp"
        android:paddingTop="4dp"
        style="@style/OrangeText"/>



</LinearLayout>