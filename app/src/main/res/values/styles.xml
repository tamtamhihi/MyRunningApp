<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:imageButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
    
    <style name="LightImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="backgroundTint">#20808080</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
    
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="fontFamily">@font/text</item>
        <item name="android:fontFamily">@font/text</item>
    </style>

    <style name="Base.Widget.AppCompat.SeekBar.Discrete.Me" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
        <item name="tickMarkTint">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Me" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="font">@font/bold</item>
        <item name="materialAlertDialogBodyTextStyle">@style/NormalText</item>
    </style>

    <style name="BoldText">
        <item name="fontFamily">@font/bold</item>
    </style>
    <style name="Title">
        <item name="fontFamily">@font/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalText">
        <item name="android:fontFamily">@font/text</item>
        <item name="fontFamily">@font/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TimeAddress">
        <item name="fontFamily">@font/text</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="OrangeText" parent="NormalText">
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="BlackText" parent="NormalText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Toolbar">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Tab" parent="Toolbar">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
